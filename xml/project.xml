<?xml version="1.0" encoding="utf-8"?>
<project>
    <meta title="Haxe Sample" package="com.georgeperry.HaxeSample" version="1.0.0" company="" />

    <!-- output -->
    <app main="Main" file="HaxeSample" path="../bin" />

    <window background="#333333" fps="60" />
    <window width="1280" height="720" unless="mobile" />
     <!--<window width="0" height="0" if="html5" />-->
    <window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />

    <!-- classpath, libs -->
    <source path="../src" />
    <haxelib name="box2d" />
    <haxelib name="openfl" />
    <haxelib name="actuate" />
	
    <haxedef name="fdb" if="flash" />

    <!-- icon -->
    <icon path="../res/openfl.svg" />

    <!-- assets -->
    <assets path="../res" rename="res" />

    <!-- optimize output
    <haxeflag name="-dce full" /> -->

</project>